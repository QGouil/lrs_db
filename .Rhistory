get_titles <- function(dois, titles_cache) {
`%>%` <- magrittr::`%>%`
titles <- purrr::map(dois, function(doi) {
if (doi %in% titles_cache$DOI) {
titles_cache %>%
dplyr::filter(DOI == doi) %>%
dplyr::pull(Title)
} else {
NA
}
}) %>%
purrr::flatten_chr()
return(titles)
}
